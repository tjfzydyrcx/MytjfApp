<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:background="@color/white"
                  android:orientation="vertical"
                  android:paddingBottom="24dp"
                  android:paddingLeft="16dp"
                  android:paddingRight="16dp"
                  android:paddingTop="16dp">

        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享到"
            android:textColor="#8f8e94"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/share_lily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/wechat_friend_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_bg"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_wechat_friend"
                android:gravity="center"
                android:padding="16dp"
                android:text="微信好友"
                android:textColor="#6F6F6F"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/wechat_moment_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_bg"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_wechat_moment"
                android:gravity="center"
                android:padding="16dp"
                android:text="朋友圈"
                android:textColor="#6F6F6F"
                android:textSize="12sp"/>


            <TextView
                android:id="@+id/qq_friend_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_bg"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_qq"
                android:gravity="center"
                android:padding="16dp"
                android:text="QQ好友"
                android:textColor="#6F6F6F"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/qq_zone_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/btn_default_bg"
                android:drawablePadding="10dp"
                android:drawableTop="@mipmap/ic_qzone"
                android:gravity="center"
                android:padding="16dp"
                android:text="QQ空间"
                android:textColor="#6F6F6F"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>
</layout>