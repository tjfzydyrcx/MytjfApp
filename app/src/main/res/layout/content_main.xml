    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/goods_tablay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            app:tabIndicatorColor="#F3A73E"
            app:tabSelectedTextColor="#F3A73E"
            app:tabTextColor="@color/whites"></android.support.design.widget.TabLayout>

        <com.example.administrator.mytjfapp.View.DecoratorViewPager
            android:id="@+id/Doviewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whites" />
</LinearLayout>
