<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/nav_bar" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/marginSize"
        android:src="@mipmap/ic_launcher_round" />

    <com.example.mytjfmusic.Views.InputvView
        android:id="@+id/ASDFA"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputHeight"
        android:layout_marginTop="@dimen/marginSize"
        app:input_hint="手机号"
        app:input_icon="@mipmap/ic_launcher_round"
        app:input_password="false"></com.example.mytjfmusic.Views.InputvView>

    <View style="@style/line"></View>

    <com.example.mytjfmusic.Views.InputvView
        android:id="@+id/ADS"
        android:layout_width="match_parent"
        android:layout_height="@dimen/inputHeight"
        android:layout_marginTop="@dimen/marginSize"
        app:input_hint="密码"
        app:input_icon="@mipmap/ic_launcher_round"
        app:input_password="true"></com.example.mytjfmusic.Views.InputvView>
    <View style="@style/line"></View>

</LinearLayout>